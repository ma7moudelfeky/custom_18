<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!--        Manager Group-->
        <record id="group_farm_manager" model="res.groups">
            <field name="name">Weather Manager</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!--        Manager Rule-->
        <record id="farm_manager_rule" model="ir.rule">
            <field name="name">Farm Manager: See All Farms</field>
            <field name="model_id" ref="model_farm_farm"/>
            <field name="groups" eval="[(4, ref('group_farm_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
        <record id="weather_data_manager_rule" model="ir.rule">
            <field name="name">Weather Data Manager: See All Farms</field>
            <field name="model_id" ref="model_farm_weather_data"/>
            <field name="groups" eval="[(4, ref('group_farm_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
        <record id="farm_configuration_manager_rule" model="ir.rule">
            <field name="name">Farm Configuration Manager: See All Farms</field>
            <field name="model_id" ref="model_farm_configuration"/>
            <field name="groups" eval="[(4, ref('group_farm_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <!--        User Group-->
        <record id="group_farm_user" model="res.groups">
            <field name="name">Weather User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!--        User Rule-->
        <record id="farm_user_rule" model="ir.rule">
            <field name="name">Farm User: See Assigned Farms</field>
            <field name="model_id" ref="model_farm_farm"/>
            <field name="groups" eval="[(4, ref('group_farm_user'))]"/>
            <field name="domain_force">[('farm_user', '=', user.id)]</field>
        </record>
        <record id="weather_data_user_rule" model="ir.rule">
            <field name="name">Weather Data User: See Assigned Farms</field>
            <field name="model_id" ref="model_farm_weather_data"/>
            <field name="groups" eval="[(4, ref('group_farm_user'))]"/>
            <field name="domain_force">[('farm_id.farm_user', '=', user.id)]</field>
        </record>
    </data>
</odoo>
