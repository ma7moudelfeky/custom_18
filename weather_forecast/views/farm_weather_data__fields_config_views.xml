<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_farm_weather_data_fields_config_list" model="ir.ui.view">
        <field name="name">farm.weather.data.fields.config.list</field>
        <field name="model">farm.weather.data.fields.config</field>
        <field name="arch" type="xml">
            <list string="Farm Weather Data Configuration">
                <field name="farm_id" options="{'no_edit': True, 'no_create': True}"/>
            </list>
        </field>
    </record>

    <record id="view_farm_weather_data_fields_config_form" model="ir.ui.view">
        <field name="name">farm.weather.data.fields.config.form</field>
        <field name="model">farm.weather.data.fields.config</field>
        <field name="arch" type="xml">
            <form string="Farm Weather Data Configuration">
                <sheet>
                    <group>
                        <field name="farm_id" options="{'no_edit': True, 'no_create': True}"/>
                    </group>
                    <group string="Weather Data Fields Show">
                        <group>
                            <field name="temp"/>
                            <field name="humidity"/>
                            <field name="weather_description"/>
                            <field name="sunrise"/>
                            <field name="sunset"/>
                            <field name="wind_speed"/>
                            <field name="wind_direction"/>
                        </group>
                        <group>
                            <field name="precip"/>
                            <field name="precip_probability"/>
                            <field name="snow"/>
                            <field name="uv_index"/>
                            <field name="cloud_cover"/>
                            <field name="dew"/>
                            <field name="visibility"/>
                            <field name="pressure"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_farm_weather_data_fields_config" model="ir.actions.act_window">
        <field name="name">Weather Data Configuration</field>
        <field name="res_model">farm.weather.data.fields.config</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_farm_weather_config"
              name="Weather Data Configuration"
              parent="menu_farm_configuration_root"
              action="action_farm_weather_data_fields_config"
              groups="es_weather_forecast.group_farm_manager"
              sequence="20"/>
</odoo>
