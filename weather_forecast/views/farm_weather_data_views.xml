<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_farm_weather_data_tree" model="ir.ui.view">
        <field name="name">farm.weather.data.tree</field>
        <field name="model">farm.weather.data</field>
        <field name="arch" type="xml">
            <list>
                <field name="farm_id" options="{'no_edit': True, 'no_create': True}"/>
                <field name="full_name"/>
                <field name="date"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_farm_weather_data_form" model="ir.ui.view">
        <field name="name">farm.weather.data.form</field>
        <field name="model">farm.weather.data</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_get_weather_data" string="Get Weather Data" type="object"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <h>
                        <field name="full_name"/>
                    </h>
                    <group string="Basic Information">
                        <group>
                            <field name="farm_id" options="{'no_edit': True, 'no_create': True}"/>
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <group string="Weather Information">
                        <group>
                            <field name="temp" invisible="disable_temp == True"/>
                            <field name="humidity" invisible="disable_humidity == True"/>
                            <field name="weather_description" invisible="disable_weather_description == True"/>
                            <field name="sunrise" invisible="disable_sunrise == True"/>
                            <field name="sunset" invisible="disable_sunset == True"/>
                            <field name="wind_speed" invisible="disable_wind_speed == True"/>
                            <field name="wind_direction" invisible="disable_wind_direction == True"/>
                        </group>
                        <group>
                            <field name="precip" invisible="disable_precip == True"/>
                            <field name="precip_probability" invisible="disable_precip_probability == True"/>
                            <field name="snow" invisible="disable_snow == True"/>
                            <field name="uv_index" invisible="disable_uv_index == True"/>
                            <field name="cloud_cover" invisible="disable_cloud_cover == True"/>
                            <field name="dew" invisible="disable_dew == True"/>
                            <field name="visibility" invisible="disable_visibility == True"/>
                            <field name="pressure" invisible="disable_pressure == True"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Hourly Weather Data">
                            <field name="weather_data_hour_line_ids">
                                <list>
                                    <field name="farm_weather_data_id" column_invisible="1"/>
                                    <field name="date_time" optional="show"/>
                                    <field name="temp" optional="show"/>
                                    <field name="humidity" optional="show"/>
                                    <field name="wind_speed" optional="show"/>
                                    <field name="wind_direction" optional="show"/>
                                    <field name="precip" optional="show"/>
                                    <field name="precip_probability" optional="show"/>
                                    <field name="snow" optional="show"/>
                                    <field name="uv_index" optional="show"/>
                                    <field name="cloud_cover" optional="show"/>
                                    <field name="dew" optional="show"/>
                                    <field name="visibility" optional="show"/>
                                    <field name="pressure" optional="show"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_farm_weather_data" model="ir.actions.act_window">
        <field name="name">Farms Weather Data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">farm.weather.data</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_farm_weather_data"
              name="Farms Weather Data"
              parent="menu_weather_forecast_root"
              action="es_weather_forecast.action_farm_weather_data"
              sequence="2"/>


</odoo>
