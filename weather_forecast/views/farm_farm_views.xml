<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View -->
    <record id="view_farm_farm_list" model="ir.ui.view">
        <field name="name">farm.farm.list</field>
        <field name="model">farm.farm</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_farm_farm_form" model="ir.ui.view">
        <field name="name">farm.farm.form</field>
        <field name="model">farm.farm</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="farm_user" groups="weather_forecast.group_farm_manager"/>
                            <field name="api_key"/>
                        </group>
                        <group>
                            <field name="longitude"/>
                            <field name="latitude"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_farm_farm" model="ir.actions.act_window">
        <field name="name">Farms</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">farm.farm</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_weather_forecast_root"
              name="Weather Forecast"
              web_icon="weather_forecast,static/description/icon.png"
              sequence="1"/>

    <menuitem id="menu_farm_farm"
              name="Farms"
              parent="menu_weather_forecast_root"
              action="weather_forecast.action_farm_farm"
              sequence="1"/>


</odoo>
